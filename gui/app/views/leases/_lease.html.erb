<tr>
  <td><%=link_to lease.device.mac, "/leases/#{lease.id}"%></td>
  <td>
    <div class='dropdown'>
      <a id='<%=lease.id%>' class="dropdown-toggle" data-toggle="dropdown" data-target="#" role="button" aria-haspopup="true" aria-expanded="false">
        <% if lease.device.status.nil? %>
          <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
        <% elsif lease.device.status.match('W') %>
          <span class="glyphicon glyphicon-thumbs-up text-success" aria-hidden="true">
        <% elsif lease.device.status.match('B') %>
          <span class="glyphicon glyphicon-thumbs-down text-danger" aria-hidden="true">
        <% end %>
      </a>
      <ul class="dropdown-menu">
        <li><%= button_to(device_path(lease.device), method: :put, params: { status: ''}) do %>
              <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>  Remove From List
            <% end %>
        </li>
        <li><%= button_to(device_path(lease.device), method: :put, params: { status: 'W'}) do %>
              <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>  Add to Whitelist
            <% end %>
        </li>
        <li><%= button_to(device_path(lease.device), method: :put, params: { status: 'B'}) do %>
              <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>  Add to Blacklist
            <% end %>
        </li>
      </ul>
      <span id='<%=lease.id%>' class="fingerprint flaticon-fingerprint21"></span>
    </div>
  </td>
  <td><%=lease.name%></td>
  <td><%=lease.ip%></td>
  <td><%=lease.expiration%></td>
  <td></td>
</tr>